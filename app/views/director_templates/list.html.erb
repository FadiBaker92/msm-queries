<H1> List Of Directors</H1>

<table border= "1">

  <tr>
    <th>id</th>
    <th>image</th>
    <th>name</th>
    <th>dob</th>
    <th></th>
  </tr>

<% Director.all.each do |a_director|  %>
  <tr>

    <td> <%= a_director.id %> </td>
    <td>
     <img src=" <%= a_director.image %>" width= "100" alt="director_photo">
    </td>
    <td> <%= a_director.name %> </td>
    <td> <%= a_director.dob %></td>
    <td>
      <a href="/directors/<%= a_director.id %>">Show Details</a>
    </td>
  </tr>
<% end %>
</table>
