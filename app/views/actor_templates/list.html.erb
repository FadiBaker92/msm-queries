<H1> List of Actors</H1>

<table border= "1">

  <tr>
    <th>id</th>
    <th>image</th>
    <th>name</th>
    <th>dob</th>
    <th></th>
  </tr>

<% Actor.all.each do |a_actor|  %>
  <tr>

    <td> <%= a_actor.id %> </td>
    <td>
     <img src=" <%= a_actor.image %>" width= "100" alt="director_photo">
    </td>
    <td> <%= a_actor.name %> </td>
    <td> <%= a_actor.dob %></td>
    <td>
      <a href="/actors/<%= a_actor.id %>">Show Details</a>
    </td>
  </tr>
<% end %>
</table>
